    <Style x:Key="DButtonStyleIcon" TargetType="Button">      
        <Setter Property="TextColor" Value="{DynamicResource Gray-White}" />
        <!--<Setter Property="FontFamily" Value="{StaticResource Montserrat-SemiBold}" />-->
        <Setter Property="FontFamily" Value="{StaticResource FontIcons}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style x:Key="DButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="{DynamicResource Gray-White}" />
        <Setter Property="FontFamily" Value="{StaticResource Montserrat-SemiBold}" />       
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!--  Common style for flat buttons  -->
  <Style x:Key="DFlatButtonStyle" TargetType="buttons:DButton">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{DynamicResource PrimaryColor}" />
    <Setter Property="FontFamily" Value="{StaticResource Montserrat-SemiBold}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="VerticalTextAlignment" Value="Center" />
  </Style>

  <!--  Common style for borders  -->
  <Style x:Key="DBorderStyle" TargetType="border:DBorder">
    <Setter Property="BackgroundColor" Value="{StaticResource BorderBackgroundColor}" />
    <Setter Property="BorderColor" Value="Transparent" />
    <Setter Property="CornerRadius" Value="20" />
    <Setter Property="BorderWidth" Value="1" />
  </Style>

  <!--  Common style for gradient view  -->
  <Style x:Key="DGradientViewStyle" TargetType="graphics:DGradientView">
    <Setter Property="Opacity" Value="0.82" />
    <Setter Property="VerticalOptions" Value="FillAndExpand" />
    <Setter Property="HorizontalOptions" Value="FillAndExpand" />
    <Setter Property="BackgroundBrush">
      <Setter.Value>
        <graphics:DLinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <graphics:DLinearGradientBrush.GradientStops>
            <graphics:DGradientStop Offset="0.0" Color="{StaticResource GradientEndColor}" />
            <graphics:DGradientStop Offset="1.0" Color="{StaticResource GradientStartColor}" />
          </graphics:DLinearGradientBrush.GradientStops>
        </graphics:DLinearGradientBrush>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="HeaderLabelStyle" TargetType="Label">
    <Setter Property="FontFamily" Value="{StaticResource Montserrat-Bold}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="LineHeight" Value="1.5"/>
    <Setter Property="TextColor" Value="{DynamicResource Gray-900}"/>
  </Style>

  <Style x:Key="FormBorderStyle" TargetType="border:DBorder">
    <Setter Property="BorderColor" Value="{DynamicResource Gray-300}"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="Margin" Value="0,8"/>
    <Setter Property="BackgroundColor" Value="{DynamicResource Gray-White}"/>
  </Style>

  <Style x:Key="BusinessFormBorderStyle" TargetType="border:DBorder">
    <Setter Property="BorderColor" Value="{DynamicResource Gray-300}"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="VerticalOptions" Value="CenterAndExpand" />
    <Setter Property="BackgroundColor" Value="{DynamicResource Gray-White}"/>
  </Style>

  <Style x:Key="EntryTextStyle" TargetType="control:BorderlessEntry">
    <Setter Property="FontFamily" Value="{StaticResource Montserrat-Regular}"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="TextColor" Value="{DynamicResource Gray-900}"/>
    <Setter Property="PlaceholderColor" Value="{DynamicResource Gray-700}"/>
  </Style>

  <Style x:Key="DatePickerStyle" TargetType="DatePicker">
    <Setter Property="FontFamily" Value="{StaticResource Montserrat-Regular}"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="TextColor" Value="{DynamicResource Gray-700}"/>
  </Style>

  <!--<Style x:Key="ComboBoxStyle" TargetType="combobox:DComboBox">
    <Setter Property="FontFamily" Value="{StaticResource Montserrat-Regular}"/>
    <Setter Property="TextSize" Value="16"/>
    <Setter Property="TextColor" Value="{DynamicResource Gray-700}"/>
    <Setter Property="ShowBorder" Value="False"/>
    <Setter Property="WatermarkColor" Value="{DynamicResource Gray-700}"/>
    <Setter Property="Margin" Value="8,3,0,-3"/>
    <Setter Property="HeightRequest" Value="40"/>
  </Style>-->

  <Style x:Key="EntryTextBoxStyle" TargetType="control:BorderlessEntry">
    <Setter Property="FontFamily" Value="{StaticResource Montserrat-Regular}"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="TextColor" Value="{DynamicResource Gray-900}"/>
    <Setter Property="PlaceholderColor" Value="{DynamicResource Gray-700}"/>
    <Setter Property="Margin" Value="12,0"/>
    <Setter Property="HeightRequest" Value="40"/>
  </Style>

  <!--  Common style for social icon SfButton  -->
  <Style x:Key="SocialIconButtonStyle" TargetType="buttons:DButton">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="CornerRadius" Value="22" />
    <Setter Property="VerticalOptions" Value="Center" />
    <Setter Property="HorizontalOptions" Value="Center" />
    <Setter Property="VerticalTextAlignment" Value="Center" />
    <Setter Property="HorizontalTextAlignment" Value="Center" />
    <Setter Property="FontFamily" Value="{StaticResource FontIcons}"/>
    <Setter Property="TextColor" Value="{DynamicResource Gray-White}"/>
  </Style>
  
</ResourceDictionary>