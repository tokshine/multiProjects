<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiProjects.QuizSelected">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="10,60,10,20" >
            <Label Text="Welcome to Xamarin.Forms!...Introduction" x:Name="selectedQuiz"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="20" TextColor="BlueViolet" />

            <Button CornerRadius="5"
                Text="Get Started"
                Clicked="OnStartClicked" FontSize="16" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>